<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 不被渲染的路径. -->
	<mapping path="/js/*" exclude="true" />
	<mapping path="/css/*" exclude="true" />
	<mapping path="/img/*" exclude="true" />
	<mapping path="/404.html" exclude="true" />
	<mapping path="/notify.html" exclude="true" />
	<mapping path="/auth/*" exclude="true" />

	<mapping path="/*" decorator="/decorator.html" />

</sitemesh>